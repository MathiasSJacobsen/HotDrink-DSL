{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true, 
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "out",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, 
    "lib": [
      "es6", 
      "dom"
    ],
    "jsx": "react",
  },
  "include": [
     "src/**/*.ts"
, "src/**/*.tsx"  ],
  "exclude": [
     "out",
     "node_modules"
  ]
}
